                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type lcc:CompactLayerTreeView}}, Path=ColumnWidth2, Mode=TwoWay}"/>
                                    <ColumnDefinition Width="0"/>
