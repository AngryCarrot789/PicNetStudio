        <Group Name="EditorWindow">
            <Shortcut Name="CloseDocument1" CommandId="CloseDocument">
                <KeyStroke Mods="CTRL" Key="W"/>
            </Shortcut>
            <Shortcut Name="CloseDocument2" CommandId="CloseDocument">
