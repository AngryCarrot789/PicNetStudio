<?xml version="1.0"?>

<KeyMap Version="1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Keymap.xsd">
    <Group Name="Application">
        <Group Name="EditorWindow">
            <Shortcut Name="ExportImage" CommandId="command.generic.ExportImage">
                <KeyStroke Mods="CTRL" Key="E"/>
            </Shortcut>
            <Shortcut Name="CloseDocument1" CommandId="CloseDocument">
                <KeyStroke Mods="CTRL" Key="W"/>
            </Shortcut>
            <Shortcut Name="CloseDocument2" CommandId="CloseDocument">
                <MouseStroke Button="Middle"/>
            </Shortcut>

            <Group Name="Canvas">
                <Shortcut Name="IncreaseBrushSize" CommandId="command.tool.BaseDiameterTool.IncreaseBrushSize">
                    <KeyStroke Key="OemCloseBrackets"/>
                </Shortcut>
                <Shortcut Name="DecreaseBrushSize" CommandId="command.tool.BaseDiameterTool.DecreaseBrushSize">
                    <KeyStroke Key="OemOpenBrackets"/>
                </Shortcut>
                <Shortcut Name="SelectCursorTool" CommandId="command.toolbar.SelectCursorTool">
                    <KeyStroke Key="C"/>
                </Shortcut>
                <Shortcut Name="SelectBrush" CommandId="command.toolbar.SelectBrushTool">
                    <KeyStroke Key="B"/>
                </Shortcut>
                <Shortcut Name="SelectPencil" CommandId="command.toolbar.SelectPencilTool">
                    <KeyStroke Key="P"/>
                </Shortcut>
                <Shortcut Name="SelectFill" CommandId="command.toolbar.SelectFillTool">
                    <KeyStroke Key="F"/>
                </Shortcut>
                <Shortcut Name="SelectSelection" CommandId="command.toolbar.SelectSelectionTool">
                    <KeyStroke Key="S"/>
                </Shortcut>
                <Shortcut Name="ClearSelection" CommandId="command.toolbar.ClearSelection">
                    <KeyStroke Mods="CTRL" Key="D"/>
                </Shortcut>
            </Group>
            <Group Name="LayerTree">
                <Shortcut Name="GroupSelection" CommandId="command.layertree.GroupSelectionIntoComposition">
                    <KeyStroke Mods="CTRL" Key="G"/>
                </Shortcut>
                <Shortcut Name="DeleteSelection" CommandId="command.layertree.DeleteSelectedLayers">
                    <KeyStroke Key="Delete"/>
                </Shortcut>
                <Group Name="Item">
                    <Shortcut Name="EditLayerName1" CommandId="command.layertree.item.EditLayerName">
                        <KeyStroke Mods="CTRL" Key="R"/>
                    </Shortcut>
                    <Shortcut Name="EditLayerName2" CommandId="command.layertree.item.EditLayerName">
                        <KeyStroke Key="F2"/>
                    </Shortcut>
                    <Shortcut Name="ToggleVisibility" CommandId="command.layertree.item.ToggleLayerVisibility">
                        <KeyStroke Key="D0"/>
                    </Shortcut>
                    <Shortcut Name="RasteriseLayer" CommandId="command.layertree.item.RasteriseLayer">
                        <KeyStroke Key="R"/>
                        <KeyStroke Key="R"/>
                    </Shortcut>
                </Group>
            </Group>
        </Group>
    </Group>
</KeyMap>